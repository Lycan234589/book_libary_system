<%-include("partials/Header.ejs")-%> <%-include("partials/Navbar.ejs")-%>
<div class="cont box signup">
  <h2>Create A New Account</h2>
  <form action="/signup" method="post">
    <div class="form-group">
      <input
        type="text"
        name="name"
        placeholder="Please Enter your FullName"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <input
        type="email"
        name="email"
        placeholder="Please Enter your Email"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        name="password"
        placeholder="Please Enter Your Password"
        class="form-control"
      />
    </div>
    <button class="btn btn-block btn-dark mb-3">Signup</button>
    <a href="/login" class="btn btn-light btn-block">Already a User ? Login Instead.</a>

  </form>
</div>
<%-include("partials/Footer.ejs")-%>
